@using TravelTrip.Classes
@model List<Comment>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Comment List</h2>

<table class="table table-responsive">

    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var x in Model)
    {
<tr>
    <td>@x.CommentId</td>
    <td>@x.UserName</td>
    <td>@x.Mail</td>
    <td>@x.Comments</td>
    <td>@x.Blog.Title</td>
    <td><a class="btn btn-danger" href="/Admin/CommentRemove/@x.CommentId">Sil</a></td>
    <td><a  class="btn btn-warning" href="/Admin/GetComment/@x.CommentId">Güncelle</a></td>
</tr>
    }


</table>