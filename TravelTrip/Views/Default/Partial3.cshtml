@using TravelTrip.Classes
@model List<Blog>
    <div class="padding">
        <h4>This Week's Top 10</h4>
        
        <ul class="list list-pad">
            @{ 
                int i = 0;
            }
            @foreach (var x in Model)
            {
                <li class="list-bg"><span>@{i++;}@i.</span><a href="/Blog/BlogDetail/@x.BlogId">@x.Title</a></li>

            }

        </ul>
        <a href="/Blog/Index/" class="link1">Tüm Blogları Gör.</a>
    </div>